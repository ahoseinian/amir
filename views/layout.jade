doctype html
html(ng-app="myApp")
  head
    title= title
    link(rel='stylesheet', href='/bootstrap/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
  body
    .container
      nav.navbar.navbar-light.bg-faded.m-b
        a.navbar-brand(href='#') Salar
          ul.nav.navbar-nav
            li.nav-item
              a.nav-link(ui-sref='home', ui-sref-active="active") Home 
            li.nav-item
              a.nav-link(ui-sref='products', ui-sref-active="active") Products
            li.nav-item
              a.nav-link(ui-sref='users', ui-sref-active="active") Users
            li.nav-item
              a.nav-link(ui-sref='models.new', ui-sref-active="active") Models
          form.form-inline.navbar-form.pull-right
            input.form-control(type='text', placeholder='Search')
            button.btn.btn-success-outline(type='submit') Search

      block content

    script(src='/jquery/dist/jquery.min.js')
    script(src='/bootstrap/dist/js/bootstrap.min.js')
